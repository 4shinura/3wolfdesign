{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/security.css') }}">
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="page-title">Réinitialiser le mot de passe</h1>

        {{ form_start(requestForm) }}
            <div class="form-group mb-3">
                <p class="text-muted">
                    Entrez votre adresse email et nous vous enverrons un lien pour choisir un nouveau mot de passe.
                </p>
                {{ form_label(requestForm.email, 'Votre adresse email') }}
                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@mail.com'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <button class="btn btn-primary btn-lg w-100">
                Envoyer le mail de récupération
            </button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}

{% block partenaires %}{% endblock %}