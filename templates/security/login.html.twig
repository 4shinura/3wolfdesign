{% extends 'base.html.twig' %}

{% block title %}Connexion - 3wolfdesign{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/security.css') }}">
{% endblock %}

{% block body %}
    <form method="post" class="form-container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                <br>
                <a href="{{ logout_path() }}">Déconnexion</a>
            </div>
        {% else %}
            <h1 class="page-title">Connexion</h1>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox-row">
                <label for="_remember_me" class="checkbox-row">Se souvenir de moi</label>
                <input type="checkbox" name="_remember_me" id="_remember_me" class="checkbox-row">
            </div>

            <br>

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>

            <p class="mt-3 text-center">
                Mot de passe oublié ? <a href="{{ path('app_forgot_password_request') }}">Réinitialiser</a>
                <br>
                Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
            </p>

        {% endif %}
    </form> 
{% endblock %}

