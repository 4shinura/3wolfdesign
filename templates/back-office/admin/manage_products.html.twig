{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits - 3wolfdesign{% endblock %}

{% block body %}
<div class="container my-5" style="max-width: 1100px;">
    
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h4 fw-bold text-uppercase tracking-wider mb-0">Catalogue Produits</h1>
            <p class="text-muted small mb-0">Gestion globale des produits : ({{ produits.getTotalItemCount }} articles)</p>
        </div>

        <div class="d-flex gap-2">
            <form action="{{ path('app_admin_manage_products') }}" method="get" class="d-flex shadow-sm">
                <input type="text" name="q" value="{{ searchTerm }}" class="form-control" placeholder="Rechercher...">
                <button class="btn btn-dark" type="submit">üîç</button>
                
                {% if searchTerm %}
                    <a href="{{ path('app_admin_manage_products') }}" class="btn btn-outline-danger ms-2" title="Annuler la recherche">
                        <i class="fas fa-times"></i>
                    </a>
                {% endif %}
            </form>

            <a href="{{ path('app_admin_product_new') }}" class="btn btn-dark rounded-3 px-4 shadow-sm">
                <i class="fas fa-plus me-2" style="font-size: 0.8rem;"></i> Nouveau
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-secondary text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3">Produit</th>
                        <th class="py-3 text-center">Cat√©gorie</th>
                        <th class="py-3 text-center">Prix</th>
                        <th class="text-end pe-4 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody style="font-size: 0.9rem;">
                    {% for produit in produits %}
                        <tr class="{{ searchTerm and searchTerm|lower in produit.nom|lower ? 'table-warning' : '' }}">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    {% if produit.img_path %}
                                        <img src="{{ asset('img/produits/' ~ produit.img_path) }}" 
                                             alt="{{ produit.nom }}" 
                                             class="rounded-3 border me-3"
                                             style="width: 45px; height: 45px; object-fit: cover;">                    
                                    {% else %}
                                        <div class="rounded-3 bg-light border d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <div class="fw-bold text-dark">{{ produit.nom }}</div>
                                        <div class="text-muted small">ID: #{{ produit.id }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-secondary border fw-normal px-2">
                                    {{ produit.categorie.titre|default('N/A') }}
                                </span>
                            </td>
                            <td class="text-center fw-bold">
                                {% if produit.estAchetable %}
                                    {{ produit.prix|number_format(2, ',', ' ') }} ‚Ç¨
                                {% else %}
                                    <span class="text-muted small italic">Indisponible</span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="{{ path('app_admin_product_edit', {id: produit.id}) }}" class="btn btn-sm btn-light border rounded-3" title="Modifier">
                                        <i class="fas fa-pen fa-xs"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_product_delete', {id: produit.id}) }}" onsubmit="return confirm('Confirmer la suppression de ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                        <button class="btn btn-sm btn-outline-danger border rounded-3" title="Supprimer">
                                            <i class="fas fa-trash-alt fa-xs"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-search fa-2x mb-3 d-block opacity-25"></i>
                                Aucun produit ne correspond √† votre recherche.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Pagination #}
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(produits) }}
    </div>
</div>

<style>
    body { background-color: #fcfcfc; }
    .tracking-wider { letter-spacing: 0.12em; }
    .table-hover tbody tr:hover { background-color: #f8f9fa; }
    .badge { font-size: 0.75rem; }
    .pagination { margin-bottom: 0; }
    
    @media (max-width: 576px) {
        .text-muted.small { display: none; }
        .container { padding-left: 10px; padding-right: 10px; }
    }
</style>
{% endblock %}

{% block partenaires %}{% endblock %}