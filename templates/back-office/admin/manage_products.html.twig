{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits - 3wolfdesign{% endblock %}

{% block body %}
<div class="container my-5" style="max-width: 1100px;">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 fw-bold text-uppercase tracking-wider mb-0">Catalogue Produits</h1>
            <p class="text-muted small mb-0">Gestion globale de l'inventaire</p>
        </div>
        <a href="{{ path('app_admin_product_new') }}" class="btn btn-dark rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2" style="font-size: 0.8rem;"></i> Nouveau
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted" style="font-size: 0.75rem; letter-spacing: 0.05rem;">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase">Produit</th>
                        <th class="py-3 text-uppercase text-center">Catégorie</th>
                        <th class="py-3 text-uppercase text-center">Prix</th>
                        <th class="text-end pe-4 py-3 text-uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody style="font-size: 0.9rem;">
                    {% for produit in produits %}
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    {% if produit.img_path %}
                                    <img src="{{ asset('img/produits/' ~ produit.img_path) }}" 
                                         alt="{{ produit.nom }}" 
                                         class="rounded-3 border me-3"
                                         style="width: 45px; height: 45px; object-fit: cover;">                    
                                    {% else %}
                                        <i class="fas fa-image fa-3x rounded-3 me-3 text-muted"> </i>
                                    {% endif %}
                                    <div>
                                        <div class="fw-bold text-dark">{{ produit.nom }}</div>
                                        <div class="text-muted small">ID: #{{ produit.id }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-secondary border fw-normal px-2">
                                    {{ produit.categorie.titre|default('N/A') }}
                                </span>
                            </td>
                            <td class="text-center fw-bold">
                                {% if produit.estAchetable %}
                                    {{ produit.prix|number_format(2, ',', ' ') }} €
                                {% else %}
                                    <p>Achat indisponible</p>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="{{ path('app_admin_product_edit', {id: produit.id}) }}" class="btn btn-sm btn-light border rounded-3">
                                        <i class="fas fa-pen fa-xs"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_product_delete', {id: produit.id}) }}" onsubmit="return confirm('Supprimer ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                        <button class="btn btn-sm btn-outline-danger border rounded-3">
                                            <i class="fas fa-trash-alt fa-xs"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body { background-color: #fcfcfc; }
    .tracking-wider { letter-spacing: 0.12em; }
    .table-hover tbody tr:hover { background-color: #f8f9fa; }
    .badge { font-size: 0.75rem; }
    /* Optionnel : cacher l'ID sur mobile */
    @media (max-width: 576px) {
        .text-muted.small { display: none; }
    }
</style>
{% endblock %}

{% block partenaires %}{% endblock %}