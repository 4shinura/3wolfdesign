{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - 3wolfdesign{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Dashboard Administrateur</h1>

    <div class="row g-4">
        {# Utilisateurs #}
        <div class="col-md-4">
            <div class="card bg-dark text-white shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Utilisateurs</h5>
                    <p class="display-4">{{ totalUsers }}</p>
                    <a href="{{ path('app_admin_manage_users') }}" class="btn btn-outline-light btn-sm">Gérer les membres</a>
                </div>
            </div>
        </div>

        {# Produits #}
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Produits</h5>
                    <p class="display-4">{{ totalProducts }}</p> 
                    <a href="{{ path('app_admin_manage_products') }}" class="btn btn-outline-light btn-sm">Gérer les produits</a>
                </div>
            </div>
        </div>

        {# Nettoyage #}
        <div class="col-md-4">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Images</h5>
                    <p class="display-5"><i class="fas fa-broom"></i></p>
                    <a href="{{ path('app_admin_manage_images') }}" class="btn btn-outline-light btn-sm">Gérer les images</a>
                </div>
            </div>
        </div>

        {# Commandes #}
        <div class="col-md-4">
            <div class="card bg-success text-white shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Commandes</h5>
                    <p class="display-4">{{ totalCommandes }}</p>
                    <a href="{{ path('app_admin_manage_orders') }}" class="btn btn-outline-light btn-sm">Voir toutes les commandes</a>
                </div>
            </div>
        </div>

        {# Commandes à traiter #}
        {% if pendingOrders > 0 %}
        <div class="col-md-4">
            <div class="card {{ pendingOrders > 0 ? 'bg-warning' : 'bg-light' }} text-white shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Commandes à traiter</h6>
                    <p class="display-4">{{ pendingOrders }}</p>
                    <a href="{{ path('app_admin_manage_orders', { 'status': 'Payée', 'sortBy': 'dateCreation', 'order': 'ASC' }) }}" class="btn btn-outline-light btn-sm">Voir les commandes en attente</a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block partenaires %}{% endblock %}