{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5" style="max-width: 1200px;">
    
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card bg-success text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-3 d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase small fw-bold opacity-75 mb-1">Total des Ventes</h6>
                    <h2 class="fw-bold mb-0" style="font-size: 1.6rem;">{{ totalVentes|number_format(2, ',', ' ') }} €</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-primary text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-3 d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase small fw-bold opacity-75 mb-1">Ce mois-ci</h6>
                    <h2 class="fw-bold mb-0" style="font-size: 1.6rem;">{{ totalVentesMois|number_format(2, ',', ' ') }} €</h2>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <form method="get" class="h-100 d-flex flex-column justify-content-end">
                <div class="input-group shadow-sm rounded-pill overflow-hidden border bg-white">
                    <span class="input-group-text bg-white border-0 ps-4">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    {# Recherche par référence #}
                    <input type="text" name="search" class="form-control border-0 py-3" 
                           placeholder="Référence..." 
                           value="{{ app.request.query.get('search') }}">
                    
                    {# Filtre par Statut #}
                    <select name="status" class="form-select border-0 border-start" style="max-width: 150px; cursor: pointer;">
                        <option value="tous">Tous</option>
                        <option value="Payée" {{ app.request.query.get('status') == 'Payée' ? 'selected' : '' }}>À traiter</option>
                        <option value="Terminé" {{ app.request.query.get('status') == 'Terminé' ? 'selected' : '' }}>Terminé</option>
                    </select>

                    <button class="btn btn-dark px-4" type="submit">Filtrer</button>
                </div>
            </form>
        </div>
    </div>

    {# Tableau des Commandes #}
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 border-0">Référence</th>
                        
                        <th class="py-3 border-0">
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'sortBy': 'dateCreation', 'order': currentOrder == 'ASC' ? 'DESC' : 'ASC'})) }}" class="text-decoration-none text-muted">
                                Date {{ currentSort == 'dateCreation' ? (currentOrder == 'ASC' ? '↑' : '↓') : '↕' }}
                            </a>
                        </th>
                        
                        <th class="py-3 border-0">Détails Produits</th>
                        
                        <th class="py-3 text-center border-0">
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'sortBy': 'status', 'order': currentOrder == 'ASC' ? 'DESC' : 'ASC'})) }}" class="text-decoration-none text-muted">
                                Statut {{ currentSort == 'status' ? (currentOrder == 'ASC' ? '↑' : '↓') : '↕' }}
                            </a>
                        </th>
                        
                        <th class="py-3 text-end border-0">
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'sortBy': 'prix_total', 'order': currentOrder == 'ASC' ? 'DESC' : 'ASC'})) }}" class="text-decoration-none text-muted">
                                Total {{ currentSort == 'prix_total' ? (currentOrder == 'ASC' ? '↑' : '↓') : '↕' }}
                            </a>
                        </th>
                        
                        <th class="text-end pe-4 py-3 border-0">Action</th>
                    </tr>
                </thead>
                <tbody style="font-size: 0.9rem;">
                    {% for commande in commandes %}
                        <tr>
                            <td class="ps-4 fw-bold text-primary">{{ commande.reference }}</td>
                            <td class="text-muted">{{ commande.dateCreation|date('d/m/Y H:i') }}</td>
                            <td>
                                <ul class="list-unstyled mb-0 small">
                                    {% for detail in commande.detailsCommande %}
                                        <li>
                                            <span class="fw-bold">{{ detail.quantite }}x</span> 
                                            {{ detail.produit.nom }} 
                                            <span class="text-muted">({{ detail.prixAchat }}€/u)</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td class="text-center">
                                {% if commande.status == 'Terminé' %}
                                    <span class="badge bg-light text-success border border-success fw-normal px-3 pt-2">Terminé</span>
                                {% else %}
                                    <span class="badge bg-light text-warning border border-warning fw-normal px-3 pt-2">À traiter</span>
                                {% endif %}
                            </td>
                            <td class="text-end fw-bold">{{ commande.prixTotal|number_format(2, ',', ' ') }} €</td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    {% if commande.status != 'Terminé' %}
                                        <form method="post" action="{{ path('app_admin_update_status_sale', {id: commande.id}) }}" onsubmit="return confirm('Marquer cette commande comme terminée ?');">
                                            <button class="btn btn-sm btn-success rounded-pill px-3 shadow-sm">
                                                Terminer
                                            </button>
                                        </form>
                                    {% endif %}
                                    <a href="{{ path('app_cart_success', {id: commande.id}) }}" class="btn btn-sm btn-light border rounded-circle" title="Voir le détail">
                                        <i class="fas fa-eye fa-xs"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-box-open fa-3x mb-3 opacity-25"></i><br>
                                    Aucune commande ne correspond à vos critères.
                                </div>
                                <a href="{{ path('app_admin_manage_sales') }}" class="btn btn-link btn-sm mt-2 text-decoration-none">Réinitialiser les filtres</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block partenaires %}{% endblock %}