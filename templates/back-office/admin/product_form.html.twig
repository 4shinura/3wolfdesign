{# templates/back-office/admin/product_form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-dark text-white p-4 rounded-top-4">
                    <h2 class="h4 mb-0 fw-bold"><i class="fas fa-cube me-2"></i>{{ title }}</h2>
                </div>
                <div class="card-body p-5 bg-white">
                    
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        
                        <div class="mb-4">
                            {{ form_label(form.nom, 'Nom de la pièce', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Titre'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.description, 'Description détaillée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Détails de l\'impression, description...'}}) }}
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                {{ form_label(form.prix, 'Prix (€)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.categorie, 'Catégorie de projet', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            {{ form_widget(form.estAchetable, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.estAchetable, 'Disponible à la vente', {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                        </div>

                        <div class="p-4 bg-light rounded-3 mb-4 border border-dashed">
                            {{ form_label(form.img_path, 'Photo de la réalisation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            
                            {% if produit is defined and produit.img_path %}
                                <div class="mb-3">
                                    <span class="text-muted small d-block mb-2">Image actuelle :</span>
                                    {% if produit.categorie.id == 1 %}
                                        <img src="{{ asset('img/produits/' ~ produit.img_path) }}" class="rounded shadow-sm" style="height: 80px;">
                                    {% else %}
                                        <img src="{{ asset('img/produits/' ~ produit.img_path) }}" class="rounded shadow-sm" style="height: 80px;">
                                    {% endif %}
                                </div>
                            {% endif %}

                            {{ form_widget(form.img_path, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text mt-2">Format JPG ou PNG, max 2Mo.</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a href="{{ path('app_gallery') }}" class="btn btn-light btn-lg px-4 me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body { background-color: #f4f7f6; }
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
    .border-dashed { border-style: dashed !important; }
</style>
{% endblock %}