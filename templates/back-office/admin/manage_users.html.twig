{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - 3wolfdesign{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des membres</h1>
        
        <form action="{{ path('app_admin_manage_users') }}" method="get" class="d-flex shadow-sm">
            <input type="text" 
                   name="q" 
                   value="{{ searchTerm }}" 
                   class="form-control" 
                   placeholder="Email ou #ID..." 
                   style="border-top-right-radius: 0; border-bottom-right-radius: 0; width: 35vh;">
            <button class="btn btn-dark" type="submit" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                üîç
            </button>
        </form>
    </div>

    {% if users is empty %}
        <div class="alert alert-info">Aucun utilisateur ne correspond √† votre recherche "<strong>{{ searchTerm }}</strong>".</div>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-link">R√©initialiser la recherche</a>
    {% else %}
        <table class="table table-hover shadow-sm bg-white rounded">
            <thead class="table-secondary text-muted small text-uppercase">
                <tr>
                    <th class="py-3 px-3" style="width: 10%;">ID</th>
                    <th class="py-3" style="width: 40%;">Email</th>
                    <th class="py-3" style="width: 25%;">R√¥les</th>
                    <th class="py-3 text-center" style="width: 25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="{{ searchTerm and user.id == searchTerm|slice(1) ? 'table-warning' : '' }}">
                    <td>#{{ user.id }}</td>
                    <td>{{ user.userIdentifier }}</td>
                    <td>
                        {% for role in user.roles %}
                            <span class="badge {{ role == 'ROLE_ADMIN' ? 'bg-danger' : 'bg-primary' }}">
                                {{ role }}
                            </span>
                        {% endfor %}
                    </td>
                    <td>
                        {% if user != app.user %}
                        <a href="{{ path('app_admin_switch_role_user', {id: user.id}) }}" class="btn btn-sm btn-dark">
                            Changer le rang
                        </a>
                        <a href="{{ path('app_admin_delete_user', {id: user.id}) }}" class="btn btn-sm btn-outline-danger">
                            Supprimer le compte
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# Affichage de la navigation (pagination) #}
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(users) }}
        </div>

        {# Petit bonus : Afficher le nombre total de r√©sultats #}
        <div class="text-center text-muted small mt-2">
            Total : {{ users.getTotalItemCount }} utilisateurs trouv√©s
        </div>
    {% endif %}
</div>
{% endblock %}

{% block partenaires %}{% endblock %}