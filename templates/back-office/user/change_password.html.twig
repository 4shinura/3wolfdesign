{% extends 'base.html.twig' %}

{% block title %}Modifier MDP - 3wolfdesign{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/security.css') }}">
{% endblock %}

{% block body %}
    {{ form_start(passwordForm) }}
        <h1 class="page-title">Sécurité du compte</h1>
        <div class="mb-4">
            {{ form_row(passwordForm.oldPassword) }}
            <hr> {# Une petite séparation visuelle #}
            {{ form_row(passwordForm.plainPassword) }}
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">Confirmer la modification</button>
        
        <p class="mt-3 text-center">
            Mot de passe actuel oublié ? <a href="{{ path('app_forgot_password_request') }}">Réinitialiser</a>
        </p>
    {{ form_end(passwordForm) }}
{% endblock %}

{% block partenaires %}{% endblock %}