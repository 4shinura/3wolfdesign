{% extends 'base.html.twig' %}

{% block title %}Mes Commandes - Mon Compte{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-light text-uppercase tracking-wider">Mon Historique d'Achats</h1>
        <span class="badge bg-light text-dark border fw-normal">{{ commandes|length }} commande(s)</span>
    </div>

    {% if commandes is empty %}
        <div class="card border-0 shadow-sm p-5 text-center rounded-4">
            <p class="text-muted mb-4">Vous n'avez pas encore passé de commande.</p>
            <a href="{{ path('app_catalog') }}" class="btn btn-dark rounded-0 px-4">Découvrir nos produits</a>
        </div>
    {% else %}
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="small text-uppercase text-muted">
                            <th class="ps-4 py-3">Commande</th>
                            <th class="py-3">Date</th>
                            <th class="py-3">Statut</th>
                            <th class="py-3">Total</th>
                            <th class="text-end pe-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold">#{{ commande.id }}</span>
                                    <div class="small text-muted d-block d-md-none">{{ commande.reference }}</div>
                                </td>
                                <td class="text-muted small">
                                    {{ commande.dateCreation|date('d/m/Y') }}
                                </td>
                                <td>
                                    {% if commande.status == 'Payée' %}
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success-subtle fw-normal px-3">
                                            Confirmée
                                        </span>
                                    {% else %}
                                        <span class="badge rounded-pill bg-secondary-subtle text-secondary border border-secondary-subtle fw-normal px-3">
                                            {{ commande.status|default('En attente') }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="fw-bold">
                                    {{ commande.prixTotal|number_format(2, ',', ' ') }} €
                                </td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_cart_success', {id: commande.id}) }}" class="btn btn-sm btn-outline-dark rounded-0">
                                        Détails
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>

<style>
    .tracking-wider { letter-spacing: 0.1em; }
    .table thead th { font-weight: 600; font-size: 0.75rem; letter-spacing: 0.05em; }
    .bg-success-subtle { background-color: #e1f5fe !important; } /* Bleu très clair pour un look pro */
    .btn-outline-dark { font-size: 0.75rem; text-uppercase; letter-spacing: 0.05em; }
</style>
{% endblock %}

{% block partenaires %}{% endblock %}