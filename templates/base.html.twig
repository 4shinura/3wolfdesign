        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastContainer = document.querySelector('.toast-container');

            function createToast(message, type = 'danger') {
                const toastHtml = `
                    <div class="toast align-items-center text-white bg-${type} border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body">${message}</div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>`;
                toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                const newToast = toastContainer.lastElementChild;
                new bootstrap.Toast(newToast, { autohide: true, delay: 3500 }).show();
            }

            document.querySelectorAll('.toast:not(.show)').forEach(t => new bootstrap.Toast(t).show());

            const errorSources = document.querySelectorAll('.form-container ul li, .invalid-feedback, .alert-danger');
            errorSources.forEach(error => {
                const message = error.innerText.trim();
                if (message.length > 5) { 
                    createToast(message, 'danger');
                    error.style.display = 'none';
                    if(error.parentElement.tagName === 'UL') error.parentElement.style.display = 'none';
                }
            });
        });
        </script>
