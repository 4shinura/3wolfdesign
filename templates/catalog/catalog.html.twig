{% extends 'base.html.twig' %}

{% block title %}Catalogue - 3wolfdesign{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/product.css') }}">
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5 page-title">
        <h1 class="page-title fw-bold">Catalogue d'aéromodèles</h1>
        <p class="lead">Parcourez les maquettes d'avions disponible.</p>
        <hr class="w-25 mx-auto text-primary" style="height: 3px;">
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
        {% for produit in produits %}
            <div class="col">
                <div class="card h-100 shadow-sm border-0 gallery-card position-relative">
                    <div class="overflow-hidden rounded-top bg-light" style="height: 300px;">
                        {% if produit.img_path %}
                            <img src="{{ asset('img/produits/' ~ produit.img_path) }}" 
                                class="card-img-top" 
                                alt="{{ produit.nom }}"
                                style="object-fit: fill; height: 100%;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center h-100">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-dark mb-1">
                            <a href="{{ path('app_catalog_show', {id: produit.id}) }}" class="text-decoration-none text-dark stretched-link">
                                {{ produit.nom }}
                            </a>
                        </h5>
                        <p class="card-text text-muted small">{{ produit.description|slice(0, 100) }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h4 text-primary mb-0">{{ produit.prix }} €</span>
                            <a href="{{ path('app_catalog_show', {id: produit.id}) }}" class="btn btn-dark">Détails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {# Affichée uniquement pour l'admin #}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col">
                <div class="card h-100 border-dashed shadow-sm bg-light gallery-card d-flex align-items-center justify-content-center text-center" 
                    style="border: 2px dashed #dee2e6; min-height: 300px;">
                    <a href="{{ path('app_admin_product_new') }}" class="stretched-link text-decoration-none text-muted">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <i class="fas fa-plus-circle fa-4x mb-3 text-primary"></i>
                            <h5 class="fw-bold text-dark">Ajouter un modèle</h5>
                            <p class="small">Nouveau modèle d'avion</p>
                        </div>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}