{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }} - 3wolfdesign{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_catalog') }}" class="text-decoration-none">Catalogue</a></li>
            <li class="breadcrumb-item active">{{ produit.nom }}</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="product-image-container ">
                {% if produit.img_path %}
                    <img src="{{ asset('img/produits/' ~ produit.img_path) }}" 
                         class="img-fluid w-100" 
                         alt="{{ produit.nom }}"
                         style="max-height: 500px; object-fit: contain;">
                {% else %}
                    <div class="d-flex align-items-center justify-content-center bg-light" style="min-height: 500px;">
                        <i class="fas fa-image fa-5x text-secondary"></i>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Colonne Infos #}
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <h1 class="display-5 fw-bold mb-3">{{ produit.nom }}</h1>
                <div class="d-flex align-items-center mb-4">
                    <span class="h2 fw-bold text-dark mb-0">{{ produit.prix }} €</span>
                    <span class="text-muted ms-2">(TTC)</span>
                </div>

                <div class="description-box mb-5">
                    <h5 class="fw-bold small text-secondary border-bottom pb-2">Description</h5>
                    <p class="text-muted lh-lg">
                        {{ produit.description|default('Aucune description détaillée pour ce modèle.') }}
                    </p>
                </div>

                <div class="d-grid gap-2 mb-5">
                    {% if produit.prix is not null and produit.prix > 0 %}
                        {# Produit achetable #}
                        <a href="{{ path('app_cart_add', {id: produit.id}) }}" class="btn btn-dark btn-lg shadow-sm">
                            <i class="fas fa-cart-plus me-2"></i>Ajouter au panier
                        </a>
                    {% else %}
                        {# Produit sur devis ou prix nul #}
                        <a href="{{ path('app_legal_contact') }}" class="btn btn-outline-dark btn-lg shadow-sm">
                            <i class="fas fa-envelope me-2"></i>Demander un devis
                        </a>
                    {% endif %}
                </div>

                {# Bloc Admin #}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="admin-panel mt-5 p-4 bg-light rounded-4 border border-dark border-opacity-25">
                        <h5 class="small fw-bold text-dark mb-3">
                            <i class="fas fa-tools me-2"></i>Administration
                        </h5>
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <a href="{{ path('app_admin_product_edit', {id: produit.id}) }}" class="btn btn-warning btn-sm px-4 rounded-pill">
                                <i class="fas fa-edit me-1"></i> Modifier
                            </a>
                            
                            <form method="post" action="{{ path('app_admin_product_delete', {id: produit.id}) }}" onsubmit="return confirm('Supprimer définitivement ce produit ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn btn-outline-danger btn-sm px-4 rounded-pill">
                                    <i class="fas fa-trash me-1"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                {% endif %}

                <a href="{{ path('app_catalog') }}" class="btn btn-link text-decoration-none mt-4 p-0">
                    <i class="fas fa-arrow-left me-2"></i> Retour au catalogue
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block partenaires %}{% endblock %}